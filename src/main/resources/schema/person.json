{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "#person",
    "type": "object",
    "title": "Person Schema",
    "description": "The details of a particular Person",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "integer",
            "description": "ID of a Person",
            "minimum": 1
        },
        "firstName": {
            "type": "string",
            "description": "First Name of a Person",
            "minLength": 1,
            "maxLength": 255
        },
        "lastName": {
            "type": "string",
            "description": "Last Name of a Person",
            "minLength": 1,
            "maxLength": 255
        },
        "email": {
            "type": "string",
            "description": "Email of a Person",
            "minLength": 1,
            "maxLength": 255
        },
        "teamId": {
            "type": "integer",
            "description": "a person's team id",
            "minimum": 1
        }
    },
    "required": [
        "id",
        "firtName",
        "lastName"
    ]
}
