{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "#taskResponse",
    "type": "object",
    "title": "Task Response Schema",
    "description": "The response of a particular person's tasks",
    "additionalProperties": false,
    "properties": {
        "firstName": {
            "type": "string",
            "description": "First Name of a Person",
            "minLength": 1,
            "maxLength": 255
        },
        "lastName": {
            "type": "string",
            "description": "Last Name of a Person",
            "minLength": 1,
            "maxLength": 255
        },
        "email": {
            "type": "string",
            "description": "Email of a Person",
            "minLength": 1,
            "maxLength": 255
        },
        "tasks": {
            "type": "array",
            "descrption": "All the tasks a person has completed",
            "$ref": "task.json"
        },
        "totalPoints": {
            "type": "int",
            "description": "How many points a person has",
            "minimum": 0
        }
    }
}
